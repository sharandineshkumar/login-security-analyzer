{
    "manifest_version": 3,
    "name": "Login Security Analyzer",
    "description": "Analyze password strength and check for security breaches in real-time while browsing.",
    "version": "1.0.0",
    "author": "Login Security Analyzer",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Login Security Analyzer"
    },
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "https://api.pwnedpasswords.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}